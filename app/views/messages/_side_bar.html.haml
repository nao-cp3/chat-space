.side-bar
  .side-bar__user-name
  
    .top-items
      .top-items__name
        = current_user.name
      .top-items__icons
        = link_to new_group_path(current_user), class: "top-items__icons__btn top-items__icons__btn--edit" do
          = icon('far', 'edit', class: "top-items__icons__btn--edit")
          %span<>
        = link_to edit_user_path(current_user), class: "top-items__icons__btn top-items__icons__btn--cog" do
          = icon('fa', 'cog', class: "top-items__icons__btn--cog")
          %span<>
  .side-bar__group-list
    - current_user.groups.each do |group|
      .groups
        = link_to '#' do
          .groups--name
            = group.name
          .groups--message
